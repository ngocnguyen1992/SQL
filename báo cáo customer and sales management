	create trigger auto_id on dbo.customer after Insert as
	begin
		declare @_id int
		select top 1 @_id = id from inserted  
		update dbo.khachhang set id_cus = 'KH' + format(id,'#####') where id = @_id
	end

	create trigger auto_id_prod on dbo.sales_management after Insert as
	begin
		declare @_id int
		select top 1 @_id = id from inserted  
		update dbo.sales_management set id_prod = 'SP' + format(id,'#####') where id = @_id
	end	

CREATE TRIGGER DK_date
ON dbo.customer
FOR UPDATE
AS
begin
	   DECLARE @res_date DATETIME, 
	   @pur_date DATETIME

		SELECT @res_date=register_date
		FROM  INSERTED
 
	IF(@res_date>ANY(SELECT pucharse_date
		FROM  sales_management S, inserted I
		WHERE S.id_cus=I.id_cus))
BEGIN
	   ROLLBACK
	   PRINT 'ERROR!!!'
END
	ELSE
	   PRINT'SUCCESSFUL'
end


	insert dbo.sales_management
	values('','iphone12_64gb','LL/A','16190000')

	
	
	



	alter table sales_management drop foreign key id_cus
	alter table dbo.sales_management alter column pucharse_date DATETIME NOT NULL DEFAULT(GETDATE())
	delete from dbo.sales_management where column = 'pucharse_date'
	drop trigger DK_date
	alter table dbo.sales_management drop column pucharse_date
	drop database testnew
	drop table sales_management
	drop trigger auto_id

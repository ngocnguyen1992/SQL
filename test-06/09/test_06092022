SELECT (ROW_NUMBER () OVER ( ORDER BY Ma_DT, Ngay_Ct ASC)) AS Stt, Ngay_Ct, Ma_DT 
INTO #temp 
FROM dbo.BanHang 
GROUP BY Ngay_Ct, Ma_DT


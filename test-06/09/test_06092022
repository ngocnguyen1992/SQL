;WITH tbl AS
(
    SELECT Ma_Dt, Ngay_Ct,  
		 LEAD(Ngay_Ct,1) OVER(ORDER BY Ngay_Ct) AS date2
    FROM #temp
)
SELECT date2, Ma_DT FROM tbl
WHERE DATEDIFF(MONTH, Ngay_Ct, date2)=1
GROUP BY date2, Ma_DT


